<% content_for :body_class, "class=form-background" %>
<div class="container">
  <div class="form" id="login">
    <div class="title">
      <h2>Log in to Brandslip</h2> 
    </div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <% flash.each do |key, value| %>
        <div class="alert <%= key %> alert-warning" role="alert"><%= value %></div>
      <% end %>
      <div class="field">
        <%= f.email_field :email, :class => "form-control", :placeholder => "Email" %>
      </div>
      <div class="field">
        <%= f.password_field :password, autocomplete: "off", :class => "form-control", :placeholder => "Password" %>
      </div>
      <div class="actions">
        <%= f.submit "Log In", :class => "btn btn-default" %>
      </div>
    <% end %>
    <div class="alternate">
      <p>Don't have an account? <%= link_to "Sign up", new_user_registration_path %></p>
    </div>
  </div>
</div>

