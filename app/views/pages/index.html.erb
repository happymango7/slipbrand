</style> 
<div class="top">
	<div class="overlay">
		<div class="container">
			<div class="navigation">    
				<div class="logo">
					<%= link_to image_tag("logo.png"), root_path %>
				</div>
				<div class="headerSearch"> 
	          		<%= form_tag search_path, method: :get do %>
	            		<%= text_field_tag :query, params[:query], :placeholder => "search for influencers", :class => "form-control" %>
	        		<% end %>
        		</div>
				<div class="menu">
					<ul class="nav nav-pills">
						<% if user_signed_in? %> 
			                <li><%= active_link_to "Campaigns", campaigns_path %></li>
			                <li><a href="/discover">Discover</a></li>
			                <li><%= active_link_to "Influencers", influencers_path %></li>
			                <li><%= active_link_to "Account", edit_user_registration_path %></li>
			                <li><%= link_to 'Sign out', destroy_user_session_path, :method=>'delete' %></li>
            			<% else %>
			                <li role="presentation"><%= link_to "Home", root_path %></li>
			                <li role="presentation"><%= link_to "Contact", contact_path %></li>
			                <li role="presentation"><%= link_to "Privacy", privacy_path %></li>
			                <li role="presentation"><%= link_to "Terms", terms_path %></li>
			                <li role="presentation"><%= link_to "Security", security_path %></li>
			                <li role="presentation"><%= link_to "Log In", new_user_session_path %></li>
			                <li role="presentation"><%= link_to "Sign Up", new_user_registration_path, :class => "btn btn-default" %></li>
            			<% end %> 
					</ul>
				</div>
			</div> 
			<div class="search">  
				<div class="tagline">
					<h2>Search. Select. Connect.</h2>
					<p>Brandslip is a search engine that helps brands connect<br /> with social media influencers more efficiently.</p>
				</div>
				<div class="platforms">
					<ul class="nav nav-pills"> 
					  <li role="presentation"><a href="#"><i class="fa fa-facebook-official" aria-hidden="true"></i></a></li>
					  <li role="presentation"><a href="#"><i class="fa fa-twitter-square" aria-hidden="true"></i></a></li>
					  <li role="presentation"><a href="#"><i class="fa fa-instagram" aria-hidden="true"></i></a></li>
					  <li role="presentation"><a href="#"><i class="fa fa-youtube" aria-hidden="true"></i></a></li>
					  <li role="presentation"><a href="#"><i class="fa fa-linkedin-square" aria-hidden="true"></i></a></li>
					  <li role="presentation"><a href="#"><i class="fa fa-snapchat-square" aria-hidden="true"></i></a></li>
					</ul>
				</div>
				<div class="getStarted">
					<p>* Starting at $19.99/month</p>
					<%= link_to "Start Your Free 3 Day Trial", new_user_registration_path, :class => "btn btn-default green" %>
				</div> 
			</div>
		</div>
	</div>
</div> 
