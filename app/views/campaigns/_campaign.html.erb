<div class="campaign">
	<div class="name">
		<h3><%= campaign.name %></h3>
	</div>
	<div class="description">
		<p><%= campaign.description %></p>
	</div>
	<div class="influencerCount">
		<h4><i class="fa fa-users" aria-hidden="true"></i><%= campaign.influencers.count %> Influencers</h4?<i>
	</div>
	<div class="influencerPhotos">
		<% if campaign.influencers.any? %>
			<% campaign.influencers.limit(8).each do |influencer| %>
				<%= link_to image_tag(influencer.avatar.url(:small)), influencer_path(influencer), :class => "influencerLink" %>
			<% end %>	
		<% end %>
	</div>
	<div class="actions">
		<%= link_to "View Campaign", campaign_path(campaign), :class => "btn btn-default view" %>
		<%= link_to "Add Influencers", influencers_path, :class => "btn btn-default green" %>
		<div class="clearfix"></div>
	</div>
</div>
 